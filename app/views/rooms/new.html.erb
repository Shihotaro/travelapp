<div class="container">
  <h1>施設新規登録</h1>
  <%= form_with model: @room, local: true do |f| %>
    <div>
      <label>施設名</label>
      <%= f.text_field :roomname %>
    </div>
    <div>
      <label>施設詳細</label>
      <%= f.text_field :roomdetails %>
    </div>
    <div>
      <label>施設住所</label>
      <%= f.text_field :roomaddress %>
    </div>
    <div>
      <label>宿泊料金</label>
      <%= f.number_field :roomrate %>
    </div>
    <div>
      <label>NEW画像</label>
      <%= f.file_field :room_image %>
    </div>

    <%= link_to "戻る",rooms_path %>
    <%= f.submit "登録" %>

  <% end %>
</div>
