<%= link_to "アカウント", user_path %>
<%= link_to "プロフィール", profile_path %>

<%= link_to "編集",edit_profile_path %>
<h1>プロフィール編集</h1>

<%= form_with model: @user,method: "patch",url: update_profile_path,local: true do |f| %>

  <div>
    <label>アイコン画像</label>
    <%= image_tag @user.icon_image.url %>
  </div>
  
  <div>
    <label>画像アップロード</label>
    <%= f.file_field :icon_image %> 
  </div>

  <div>
    <label>名前</label>
    <%= f.text_field :name %>
  </div>

  <div>
    <label>自己紹介</label>
    <%= f.text_area :message %>
  </div>

  <%= link_to "キャンセル", 'javascript:history.back()' %>
  <%= f.submit "更新" %>

<% end %>
